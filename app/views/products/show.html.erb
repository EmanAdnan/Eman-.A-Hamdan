
<div class="container show-product">
    <div class="thumbnail">
      <%= image_tag(@product.image_url, class: "img-responsive product-img") %>
      <div class="caption">
        <h3><%= @product.name%></h3>
        <p><%= @product.colour%></p>
        <p><%= @product.description%></p>
        <strong><%= number_to_currency((@product.price), unit: "$") %></strong>
       <p> Average Rating: 
        <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div>
       </p>
        <p class="actions" > <%= link_to 'Back', products_path %>

          <% if signed_in? && current_user.admin? %>
                <%= link_to 'Edit', edit_product_path %> 
                <%end%>
         </p>
         <%= render 'new_comment' %>
         <%= render 'comments' %>
      </div>
    </div>
</div>
 